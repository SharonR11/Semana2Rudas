<Window x:Class="Semana2Rudas.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2Rudas"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Inicio de sesión" FontSize="18" HorizontalAlignment="Center" Margin="0,20,0,10"/>
            <TextBlock Text="Usuario" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsuario" Height="30"/>
            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox  x:Name="txtPassword" Height="30"/>
            <Button Content="Ingresar" Click="Button_Click" Margin="0,20,0,0"/>
            <TextBlock x:Name="txtMensaje" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
                
    </Grid>
</Window>
