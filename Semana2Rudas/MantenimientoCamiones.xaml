<Window x:Class="Semana2Rudas.MantenimientoCamiones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana2Rudas"
        mc:Ignorable="d"
        Title="MantenimientoCamiones" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Registro de Camiones" FontSize="18" HorizontalAlignment="Center" Margin="0,20,0,10"/>
            
            <TextBlock Text="Peso Maximo" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPesoMaximo" Height="30"/>
            
            <TextBlock Text="Placa" Margin="0,0,0,5"/>
            <PasswordBox  x:Name="txtPlaca" Height="30"/>

            <TextBlock Text="Peso Vacio" Margin="0,0,0,5"/>
            <PasswordBox  x:Name="txtPesoVacio" Height="30"/>

            <Button Content="Registrar" Click="Button_Registrar" Margin="0,20,0,0"/>
            <TextBlock x:Name="txtMensaje" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
